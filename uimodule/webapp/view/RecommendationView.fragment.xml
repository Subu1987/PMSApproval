<core:FragmentDefinition xmlns="sap.ui.table" xmlns:m="sap.m" xmlns:layout="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<m:VBox id="_IDGenVBox117" class="sapUiMediumMargin">
		<f:SimpleForm editable="false" layout="ResponsiveGridLayout" labelSpanL="1" labelSpanM="1" adjustLabelSpan="true" emptySpanL="1"
			emptySpanM="1" columnsL="1" columnsM="1">
			<f:content>
				<m:Label text="{i18n>consideredCommentOnThePotentialOfTheEmployee} {i18n>notMoreThan150}">
					<m:layoutData>
						<layout:GridData span="L12 M12 S12"/>
					</m:layoutData>
				</m:Label>
				<m:TextArea rows="2" maxLength="150" value="">
					<m:layoutData>
						<layout:GridData span="L12 M12 S12"/>
					</m:layoutData>
				</m:TextArea>
			</f:content>
			<f:content>
				<m:Label text="{i18n>quantifiedSpecificWorkTitle} {i18n>notMoreThan150}">
					<m:layoutData>
						<layout:GridData span="L12 M12 S12"/>
					</m:layoutData>
				</m:Label>
				<m:TextArea rows="2" maxLength="150" value="">
					<m:layoutData>
						<layout:GridData span="L12 M12 S12"/>
					</m:layoutData>
				</m:TextArea>
			</f:content>
			<f:content>
				<m:Label text="{i18n>areasOfConcernTitle} {i18n>notMoreThan150}">
					<m:layoutData>
						<layout:GridData span="L12 M12 S12"/>
					</m:layoutData>
				</m:Label>
				<m:TextArea rows="2" maxLength="150" value="">
					<m:layoutData>
						<layout:GridData span="L12 M12 S12"/>
					</m:layoutData>
				</m:TextArea>
			</f:content>
		</f:SimpleForm>
		<Table rows="{dataSet>/recommendation}" selectionMode="None" visibleRowCount="4" ariaLabelledBy="title">
			<extension>
				<m:OverflowToolbar style="Clear">
					<m:Title id="change_title2" text="{i18n>recommendationTitle}"/>
				</m:OverflowToolbar>
			</extension>
			<columns>
				<Column width="15rem">
					<m:Label text=""/>
					<template>
						<m:Text text="{dataSet>type}"/>
					</template>
				</Column>
				<Column width="8rem" hAlign="Center">
					<m:Label text="1st Appraiser"/>
					<template>
						<m:Input value="{M1}"/>
					</template>
				</Column>
				<Column width="8rem" hAlign="Center">
					<m:Label text="2nd Appraiser"/>
					<template>
						<m:Input value="{M2}"/>
					</template>
				</Column>
				<Column width="8rem" hAlign="Center">
					<m:Label text="3rd Appraiser"/>
					<template>
						<m:Input value="{M3}"/>
					</template>
				</Column>
				<Column>
					<m:Label text=""/>
					<template>
						<m:Text text=""/>
					</template>
				</Column>
			</columns>
		</Table>
	</m:VBox>
</core:FragmentDefinition>