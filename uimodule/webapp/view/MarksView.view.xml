			<footer>
				<m:Table class="test">
					<m:columns>
						<m:Column hAlign="End"></m:Column>
						<m:Column hAlign="Center" width="7.5rem"></m:Column>
						<m:Column hAlign="Center" width="8.5rem"></m:Column>
						<m:Column hAlign="Center" width="5rem"></m:Column>
					</m:columns>
					<m:items>
						<m:ColumnListItem>
							<m:cells>
								<m:Text text="Total (out of 20)"/>
								<m:Text text="{/factorTotal/0/m1}"/>
								<m:Text text="{/factorTotal/0/m1}"/>
								<m:Text text="{/factorTotal/0/m1}"/>
